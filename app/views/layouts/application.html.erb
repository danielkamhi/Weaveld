<!DOCTYPE html>
<html>
<head>
  <title>Weaveld</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
 
 
<!-- </header> -->
    <!--   <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p> -->

  <!--header-->   
  
  <div id="headerBody">
    <ul>
      <li><a href="/">Weaveld</a></li>
      <li>About</li>
      <li>Contact</li>

      <% if current_user %>
          <li id="signIn"><%= link_to "Log Out",  destroy_user_session_path, method: 'delete' %> | <%= link_to " Edit Account",  user_path(current_user.id) %> <div class="notice"><%= notice %></div></li>
      <% else %>
          <li id="signIn"><a href="/users/sign_in">Sign In</a>  <li id="signUp"><a href="/users/sign_up">Sign Up</a> 
          <div class="notice"><%= notice %></div></li>
      <% end %>  
        
    </ul>
  </div>  
  <%= yield %>

</body>
</html>
